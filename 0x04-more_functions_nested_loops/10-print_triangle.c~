#include "main.h"

/**
 * print_triangle - print triangles
 * @size: size of our triangle
 */

void print_triangle(int size)
{
	int counter;
	int inner_counter;

	counter = 1;

	while (counter <= size)
	{
		inner_counter = 1;

		while (inner_counter <= counter)
		{
			_putchar('#');
			inner_counter++;
		}

		_putchar('\n');
		counter++;
	}
}
